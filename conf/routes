# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()
GET	/faqs.json		controllers.Application.json()
GET	/faqs/:id.json		controllers.Application.jsonById(id: String)
DELETE	/faqs/:id.json		controllers.Application.deleteById(id: String)
POST	/faqs.json		controllers.Application.createFaq()
GET	/group			controllers.Application.group()
POST	/sayHello		controllers.Application.sayHello()
OPTIONS /*url                   controllers.Application.options(url: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.at(path="/public", file)

