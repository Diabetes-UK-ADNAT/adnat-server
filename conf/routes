# Routes
# This file defines all application routes (Higher priority routes first)

GET     /                       controllers.Application.index()
GET     /ping                   controllers.Application.ping()

GET	/faqs.json		controllers.FaqController.getAll()
GET	/faqs/:id.json		controllers.FaqController.getById(id: String)
DELETE	/faqs/:id.json		controllers.FaqController.delete(id: String)
POST	/faqs.json		controllers.FaqController.create()

GET	/group			controllers.Application.group()
POST	/sayHello		controllers.Application.sayHello()

OPTIONS /*url                   controllers.Application.options(url: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.at(path="/public", file)

